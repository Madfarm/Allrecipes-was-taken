<%- include('../partials/header') %>
<div class="new-recipe-form-container">
    <form class="new-recipe-form" action="/recipes/<%=recipe._id %>?_method=PUT" method="POST">
        <div class="recipe-input-container">
        <label>Recipe Name
            <input type="text" placeholder="e.g. Shrimp Scampi" name="title" value=" <%= recipe.title%>">
        </label>
</div>
        <div class="recipe-input-container">
        <label>Ingredients
            <textarea placeholder="Add ingredients seperated by commas" name="ingredients"><%= recipe.ingredients.join(', ')%></textarea>
        </label>
    </div>
        <div class="recipe-input-container">
        <label>Directions
            <textarea placeholder="Add directions seperated by commas" name="directions"><%= recipe.directions.join(', ')%></textarea>

        </label>
    </div>
        <div class="recipe-input-container">
        <select name="difficulty">Difficulty
            
            <% let options=[ 'easy' , 'medium' , 'hard'];
            let selected = recipe.difficulty
            for (let i=0; i < options.length; i++ ) {
            %>
               <option value="<%= options[i]%>" <%=options[i] == selected ? 'selected' : "" %>><%= options[i]%></option>
            <% } %>
        </select>
    </div>
        <div class="recipe-input-container">
        <select name="category">Category

            <%  options=[ "breakfast" , "lunch" , "dinner" , "dessert" ]; 
            selected = recipe.category
            for (let i=0; i < options.length; i++ ) {
     
            %>
               <option value="<%= options[i]%>" <%=options[i] == selected ? 'selected' : "" %>><%= options[i]%></option>
               
            <% } %>
        </select>
    </div>
        <div class="recipe-input-container">
        <select name="category2">Category
            <option></option>

            <%  options=["vegetarian", "pescatarian", "vegan"]; 
            selected = recipe.category2
            for (let i=0; i < options.length; i++ ) {
     
            %>
               <option value="<%= options[i]%>" <%=options[i] == selected ? 'selected' : "" %>><%= options[i]%></option>
               
            <% } %>

        </select>
    </div>
        <div class="recipe-input-container">
        <label>Time:
            <input type="number" name="time" value="<%= recipe.time %>">
        </label>
    </div>
        <button type="submit">Update Recipe</button>

    </form>
</div>
    </body>

    </html>


    