<%- include('../partials/header') %>
    <div class="new-recipe-form-container">
    <form class="new-recipe-form" action="/recipes" method="POST">
        <div class="recipe-input-container">
            <label>Recipe Name
                <input type="text" placeholder="e.g. Shrimp Scampi" name="title">
            </label>
        </div>
        <div class="recipe-input-container">
            <label>Ingredients
                <input type="text" placeholder="Add ingredients seperated by commas" name="ingredients">
            </label>
        </div>
        <div class="recipe-input-container">
            <label>Directions
                <input type="text" placeholder="Add directions seperated by commas" name="directions">
            </label>
        </div>
        <div class="recipe-input-container">
            <select name="difficulty">Difficulty
                <option disabled selected></option>
                <option value="easy">Easy</option>
                <option value="medium">Medium</option>
                <option value="hard">Hard</option>
            </select>
        </div>
        <div class="recipe-input-container">
            <select name="category">Category
                <option disabled selected></option>
                <option value="breakfast">Breakfast</option>
                <option value="lunch">Lunch</option>
                <option value="dinner">Dinner</option>
                <option value="dessert">Dessert</option>
            </select>
        </div>

        <div class="recipe-input-container">

            <select name="category2">Category'
                <option disabled selected></option>
                <option value="vegetarian">Vegetarian</option>
                <option value="pescatarian">Pescatarian</option>
                <option value="vegan">Vegan</option>
            </select>
        </div>
        <div class="recipe-input-container">
            <label>Time
                <input type="number" placeholder="in minutes" name="time">
            </label>
        </div>


        <button type="submit">Add Recipe</button>
    </form>
    </div>
    </body>

    </html>