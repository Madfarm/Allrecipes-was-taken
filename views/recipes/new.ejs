<%- include('../partials/header') %>
    <form action="/recipes" method="POST">
        <label>Recipe Name
            <input type="text" placeholder="e.g. Shrimp Scampi" name="title">
        </label>

        <label>Ingredients:
            <input type="text" placeholder="Add an ingredient" name="ingredients">
        </label>

        <label>Directions:
            <input type="text" placeholder="e.g. Preheat oven to 400F" name="directions">
        </label>

        <select name="difficulty">Difficulty
            <option value="easy">Easy</option>
            <option value="medium">Medium</option>
            <option value="hard">Hard</option>
        </select>

        <select name="category">Category
            <option value="breakfast">Breakfast</option>
            <option value="lunch">Lunch</option>
            <option value="dinner">Dinner</option>
            <option value="dessert">Dessert</option>
        </select>

        <select name="category2">Category
            <option value="vegetarian">Vegetarian</option>
            <option value="pescatarian">Pescatarian</option>
            <option value="vegan">Vegan</option>
        </select>

        <label>Time:
            <input type="number" placeholder="in minutes" name="time">
        </label>

        <button type="submit">Add Recipe</button>

    </form>

</body>
</html>