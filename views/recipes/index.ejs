<%- include('../partials/header') %>

  <div>
    <form class="filter" method="GET" action="/recipes">
      <h3>Filter</h3>
      <select class="options" name="difficulty">Difficulty
        <option disabled selected></option>
        <option value="easy">Easy</option>
        <option value="medium">Medium</option>
        <option value="hard">Hard</option>
      </select><br>

      <select class="options" name="category">Category
        <option disabled selected></option>
        <option value="breakfast">Breakfast</option>
        <option value="lunch">Lunch</option>
        <option value="dinner">Dinner</option>
        <option value="dessert">Dessert</option>
      </select><br>

      <select class="options" name="category2">Category'
        <option disabled selected></option>
        <option value="vegetarian">Vegetarian</option>
        <option value="pescatarian">Pescatarian</option>
        <option value="vegan">Vegan</option>
      </select><br>
      <button type="submit">Filter Recipes</button>
    </form>

  </div>



  <% recipes.forEach(function(r) { %>
    <div class="recipes">
      <a href="/recipes/<%= r._id %>">
        <div class="each-recipe">
          <h3>
            <%= r.title %>
          </h3>
          <h4>
            <%= r.difficulty %>
          </h4>
      </a>

      <% }) %>
    </div>



    </body>

    </html>